        <div class="mb-2">
            <label class="form-label">عدد القطع</label>
            <input type="number" class="form-control quantity-input" value="1" min="1">
        </div>

        <!-- السعر المستحق -->
        <div class="mb-2">
            <label class="form-label">السعر المستحق</label>
            <input type="text" class="form-control total-price" readonly>
        </div>

        <!-- السعر المدفوع -->
        <div class="mb-2">
            <label class="form-label">السعر المدفوع</label>
            <input type="number" class="form-control paid-price" min="0">
        </div>
    </div>
</template>

